@page "/blazorforms"
@inherits BlazorFormsCode

@using WeatherBlazorApp.Client.Components

<h4>Create New Weather Forecast</h4>
@if (saving)
{
    <div class="spinner-border text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>
}
<EditForm EditContext="EditContext" OnSubmit="@HandleSubmit">
    <DataAnnotationsValidator />
    <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label text-sm-right">Date: </label>
        <div class="col-sm-4">
            <MyInputDate Id="date" Class="form-control" @bind-Value="Model.Date" disabled="@(saving ? "disabled" : null)"></MyInputDate>
        </div>
        <div class="col-sm-6">
            <ValidationMessage For="@(() => Model.Date)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="summary" class="col-sm-2 col-form-label text-sm-right">Summary: </label>
        <div class="col-sm-4">
            <MyInputText Id="summary" Class="form-control" @bind-Value="Model.Summary" disabled="@(saving ? "disabled" : null)"></MyInputText>
        </div>
        <div class="col-sm-6">
            <ValidationMessage For="@(() => Model.Summary)" />
        </div>
    </div>
    <div class="form-group row">
        <label for="temperaturec" class="col-sm-2 col-form-label text-sm-right">Temperature &deg;C</label>
        <div class="col-sm-4">
            <MyInputNumber Id="temperaturec" Class="form-control" @bind-Value="Model.TemperatureC" disabled="@(saving ? "disabled" : null)"></MyInputNumber>
        </div>
    </div>
    <div class="form-group row">
        <label for="temperaturef" class="col-sm-2 col-form-label text-sm-right">Temperature &deg;F</label>
        <div class="col-sm-4">
            <input type="text" id="temperaturef" class="form-control" value="@Model.TemperatureF" readonly />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary float-sm-right" disabled="@(saving ? "disabled" : null)">Create</button>
        </div>
    </div>
</EditForm>